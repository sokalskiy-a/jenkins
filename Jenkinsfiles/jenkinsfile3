#!groovy
properties([disableConcurrentBuilds()])

pipeline {
    agent {
        label 'Node1'
        }
    triggers { pollSCM('* * * * *') }
    options {
        buildDiscarder(logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10'))
        timestamps()
    }
    stages {
        stage("First step") {
            steps {
                sh 'sleep 1'
                sh 'ls -la'
                sh 'date'
            }
        }
        stage("Second step") {
            steps {
                sh 'sleep 1'
                sh 'uptime'
                sh 'whoami'
            }
        }
        stage("Third step") {
            steps {
                echo "==========Start building image=========="
                dir('Dockerfiles') {
                  sh 'docker build -t myapp:BUILD_NUMBER .'
                }
            }
        }
    }
}
